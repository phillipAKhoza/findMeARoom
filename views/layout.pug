doctype html
html
  head
    title Malazi
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
      
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href='#') Malazi
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarCollapse' aria-controls='navbarCollapse' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarCollapse.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-md-0
            li.nav-item
              a.nav-link( href='/') Home
            if user
              li.nav-item
                a.nav-link(href='/accommodations/add') Add Accommodation
          ul.navbar-nav.navbar-right
            if user
              li.nav-item
                a.nav-link(href='/users/logout' id="logBtn") Logout
            else  
              
              li.nav-item
                a.nav-link(href='/users/register' id="regBtn") Register
              li.nav-item
                a.nav-link(href='/users/login' id="loginBtn") Login
    .container
      br
      != messages('message',locals)
      if errors
        each error, i in errors 
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; 2020
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')
    script(src='/js/checkbox.js')
